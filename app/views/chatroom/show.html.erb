<h3 class="text-center"><%= @chatroom.language %> Language Chatroom</h3> </br></br></br></br>

<div class="container">
    <div class="columns small-4">
        <div id="freshtilledsoil_embed_widget" class="video-chat-widget">
            <script id="fts" src="http://freshtilledsoil.com/embed/webrtc-v5.js?r=FTS0316-CZ6NqG97"></script>
        </div>
    </div>
    <div class="columns small-4">
        <div class="row">
            <div class="columns small-12">

                <ul class="side-nav" id="chat">
                  <% @messages.each do |mess| %>
                  <li><%= mess.message %></li>
                  <% end %>
                </ul>
            </div>

            
                <div class="row collapse">
                    <div class="small-10 columns">
                      <input class="add-message" type="text" placeholder="Enter your message here">
                    </div>
                    <div class="small-2 columns">
                      <button class="button postfix">Send</button>
                    </div>
                </div>
                </div>
    </div>

    <div class="columns small-4">
        <embed width="100%" height="400" src="//www.youtube.com/embed/REoYZ37j8mY?autoplay=1" frameborder="0" allowfullscreen autoplay="autoplay">
    </div>
